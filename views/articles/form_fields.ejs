<div class="form-group">
    <label for="title">Título</label>
    <input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control">
</div>
<div class="form-group">
    <label for="description">Descripción</label>
    <textarea name="description" id="description" rows="2" class="form-control"><%= article.description %></textarea>
</div>
<div class="form-group">
    <label for="markdown">Contenido</label>
    <textarea required name="markdown" id="markdown" rows="10" class="form-control"><%= article.markdown %></textarea>
  </div>

<a href="/" class="btn btn-secondary mt-3">Volver</a>
<button type="submit" class="btn btn-primary mt-3">Enviar</button>